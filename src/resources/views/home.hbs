<div class="mt-4">
  <div class="row g-4 justify-content-center">
    {{#each courses}}
    <div class="col-sm-6 col-lg-4 d-flex">
      <div class="card card-course-item w-100 shadow-sm border-0" style="border-radius:10px; overflow:hidden;">
        <a href="/course/{{this.slug}}">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" 
               style="height:200px; object-fit:cover;">
        </a>

        <div class="card-body d-flex flex-column justify-content-between text-center" style="min-height:200px;">
          <div>
            <a href="/course/{{this.slug}}" class="text-decoration-none text-dark">
              <h5 class="card-title mb-2">{{this.name}}</h5>
            </a>
            <p class="card-text text-muted mb-3" style="min-height:40px;">{{this.description}}</p>
          </div>

          <a href="#" class="btn btn-primary w-100 mt-auto" style="border-radius:6px;">Mua khóa học</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
